<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/main_background">
 
        <FrameLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >
               
                 
        <net.csdn.e28sean.ccpartner.ChessBoard
        android:id="@+id/board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
        
        <TextView 
            android:id="@+id/view_result"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/semi_alpha"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/result"
        android:visibility="gone" />
        
        </FrameLayout>
        
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_regret"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:text="悔棋" 
            style="@style/ButtonText" />

        <Button
            android:id="@+id/button_draw"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:text="提和" 
            style="@style/ButtonText" />

        <Button
            android:id="@+id/button_surrender"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:text="认输" 
            style="@style/ButtonText" />
        
        <Button 
            android:id="@+id/button_newgame"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/btn_blue"
            android:text="再来一盘"
            android:visibility="gone"
            style="@style/ButtonText" />

 
    </LinearLayout>
</LinearLayout>


   
